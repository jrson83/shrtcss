{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    ":gitSignOff",
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticCommitTypeAll(build)",
    ":semanticCommitScope(deps)"
  ],
  "timezone": "Europe/Amsterdam",
  "enabledManagers": [
    "npm",
    "github-actions"
  ],
  "addLabels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Don't bump engines field in package.json",
      "matchPackageNames": [
        "node"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false
    },
    {
      "description": "Automatically merge devDependencies updates",
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}
