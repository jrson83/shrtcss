{
  "name": "shrtcss-monorepo",
  "private": true,
  "keywords": ["multi-root ready"],
  "license": "MIT",
  "scripts": {
    "============= WORKSPACE =============": "",
    "preinstall": "npx only-allow pnpm",
    "reinstall": "pnpm run clean:workspace && pnpm install",
    "list": "pnpm recursive list",
    "list:workspaces": "pnpm m ls --depth -1 --porcelain",
    "============= STYLE =================": "",
    "style": "pnpm lint && pnpm fmt && pnpm stylelint",
    "stylelint:check": "stylelint \"./packages/**/*.scss\" -f verbose --color",
    "stylelint": "stylelint \"./packages/**/*.scss\" --fix",
    "lint": "biome check --apply-unsafe .",
    "fmt": "biome format . --write",
    "============= CLEAN =================": "",
    "clean:workspace": "node ./scripts/cleanWorkspace.mjs",
    "clean": "pnpm --stream -r clean",
    "clean:core": "pnpm --filter @shrtcss/core clean",
    "clean:react": "pnpm --filter @shrtcss/react clean",
    "clean:react-hooks": "pnpm --filter @shrtcss/react-hooks clean",
    "============= DEV ===================": "",
    "dev": "pnpm run dev:react",
    "dev:react": "pnpm --filter @shrtcss/react dev",
    "============= BUILD =================": "",
    "build": "pnpm build:core && pnpm build:react-hooks && pnpm build:react",
    "build:docs": "pnpm --filter @shrtcss/react build:docs",
    "build:core": "pnpm --filter @shrtcss/core build",
    "build:react": "pnpm --filter @shrtcss/react build",
    "build:react-hooks": "pnpm --filter @shrtcss/react-hooks build",
    "============= TEST ==================": "",
    "test": "vitest --run --environment jsdom",
    "quality-check": "pnpm run style && pnpm run test",
    "============= MISC ==================": "",
    "spritemap": "node ./scripts/buildSpritemap.mjs",
    "commit": "mcz",
    "pub": "node ./scripts/prepublishOnly.mjs && npx sparkee publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "@mini-cz/config-default": "^0.8.4",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.8.2",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "mini-cz": "^0.8.4",
    "nano-staged": "^0.8.0",
    "pkgroll": "^2.0.1",
    "sass": "^1.69.0",
    "sparkee": "^1.3.4",
    "stylelint": "^15.10.3",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": "use `pnpm` instead",
    "pnpm": ">=8.7.0",
    "yarn": "use `pnpm` instead"
  },
  "nano-staged": {
    "*.{ts,tsx}": "biome check --apply-unsafe .",
    "*.{ts,tsx,json}": "biome format --write .",
    "*.scss": "stylelint \"./packages/**/*.scss\" --fix"
  },
  "packageManager": "pnpm@8.8.0",
  "pnpm": {
    "overrides": {
      "rollup": "3.29.4"
    }
  }
}
