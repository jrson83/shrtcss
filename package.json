{
  "name": "shrtcss-monorepo",
  "private": true,
  "keywords": ["multi-root ready"],
  "license": "MIT",
  "scripts": {
    "============= WORKSPACE =============": "",
    "preinstall": "npx only-allow pnpm",
    "reinstall": "pnpm run clean:workspace && pnpm install",
    "list": "pnpm recursive list",
    "list:workspaces": "pnpm m ls --depth -1 --porcelain",
    "============= STYLE =================": "",
    "style:check": "stylelint \"./packages/shrtcss/**/*.scss\" -f verbose --color",
    "style": "stylelint \"./packages/shrtcss/**/*.scss\" --fix -f verbose â€”color",
    "lint": "rome check --apply-unsafe .",
    "fmt": "rome format . --write",
    "============= CLEAN =================": "",
    "clean:workspace": "node ./scripts/cleanWorkspace.mjs",
    "clean": "pnpm --stream -r clean",
    "clean:core": "pnpm --filter shrtcss clean",
    "clean:react": "pnpm --filter react-ts clean",
    "clean:preact": "pnpm --filter preact-ts clean",
    "============= DEV ===================": "",
    "dev:react": "pnpm --filter react-ts dev",
    "dev:preact": "pnpm --filter preact-ts dev",
    "============= BUILD =================": "",
    "build": "pnpm \"--filter=./packages/*\" \"--filter=!docs\" -r build",
    "build:core": "pnpm --filter shrtcss build",
    "build:react": "pnpm --filter react-ts build",
    "build:preact": "pnpm --filter preact-ts build",
    "============= TEST ==================": "",
    "test:react": "pnpm --filter react-ts test",
    "test:preact": "pnpm --filter preact-ts test",
    "============= MISC ==================": "",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.4.7",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "rome": "^12.1.3",
    "sass": "^1.64.2",
    "sparkee": "^1.3.3",
    "stylelint": "^15.10.2",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vitest": "^0.34.1"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": "use `pnpm` instead",
    "pnpm": ">=8.6.0",
    "yarn": "use `pnpm` instead"
  },
  "nano-staged": {
    "*.{ts,tsx}": "rome check --apply-unsafe .",
    "*": "rome format --write .",
    "*.scss": "stylelint \"./packages/shrtcss/**/*.scss\" --fix"
  },
  "packageManager": "pnpm@8.6.11"
}
