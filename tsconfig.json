{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "vite"],
    "baseUrl": ".",
    "paths": {
      "@shrtcss/core": ["./packages/core/scss/shrtcss.scss"],
      "@shrtcss/react": ["./packages/react/src/index.ts"],
      "@shrtcss/react-hooks": ["./packages/react-hooks/src/index.ts"]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/public/**",
    "**/__tests__/**"
  ]
}
