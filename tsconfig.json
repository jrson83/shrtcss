{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "vitest"],
    "paths": {
      "shrtcss": ["./packages/shrtcss/scss/main.scss"]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/public/**",
    "**/__tests__/**"
  ]
}
