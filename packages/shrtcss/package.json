{
  "name": "shrtcss",
  "version": "0.1.0",
  "description": "A lightweight SCSS/CSS library.",
  "keywords": [
    "css",
    "css-framework",
    "css-library",
    "framework",
    "library",
    "lightweight",
    "micro",
    "sass",
    "sass-framework",
    "sass-library",
    "scss",
    "scss-framework",
    "scss-library",
    "tiny"
  ],
  "homepage": "https://shrtcss.jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/shrtcss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/shrtcss.git"
  },
  "license": "MIT",
  "author": "Jörn Spangenberg <github@jrson.me> (https://jrson.me)",
  "type": "module",
  "style": "dist/css/shrt.min.css",
  "scripts": {
    "style:check": "stylelint \"./scss/*.scss\" -f verbose --color",
    "style": "stylelint \"./scss/*.scss\" --fix -f verbose —color",
    "lint": "rome check --apply-unsafe .",
    "fmt": "rome format . --write",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && pnpm run build:sass && pnpm run build:sass-min",
    "build:sass": "sass --no-source-map --style=expanded scss/main.scss:dist/shrt.css",
    "build:sass-min": "sass --no-source-map --style=compressed scss/main.scss:dist/shrt.min.css"
  },
  "devDependencies": {
    "postcss": "^8.4.24",
    "postcss-scss": "^4.0.6"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": "use `pnpm` instead",
    "pnpm": ">=8.4.0",
    "yarn": "use `pnpm` instead"
  },
  "packageManager": "pnpm@8.6.4",
  "sass": "scss/shrtcss.scss"
}
