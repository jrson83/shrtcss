{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/src": ["src/index.ts"],
      "@/storylite/*": [".storylite/*.tsx"]
    }
  },
  "include": ["*.ts", "*.tsx", ".storylite/**/*", "src/**/*", "types/**/*"]
}
