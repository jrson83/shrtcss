{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "useDefineForClassFields": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "@storylite/vite-plugin/virtual",
      "node",
      "react",
      "react-dom",
      "vite/client",
      "vitest/jsdom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/src": ["src/index.ts"],
      "@/storylite/*": [".storylite/*.tsx"]
    }
  },
  "include": ["*.ts", "*.tsx", ".storylite/**/*", "src/**/*", "types/**/*"]
}
