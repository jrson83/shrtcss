{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@storylite/vite-plugin/virtual",
      "node",
      "react",
      "react-dom",
      "vite/client",
      "vitest/jsdom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/src": ["src/index.ts"],
      "@/storylite/*": [".storylite/*.tsx"],
      "@shrtcss/core": ["../core/scss/shrtcss.scss"],
      "@shrtcss/react/types": ["types/index.d.ts"],
      "@shrtcss/react-hooks": ["../react-hooks/src/index.ts"]
    }
  },
  "include": ["*.ts", "*.tsx", ".storylite/**/*", "src/**/*", "types/**/*"]
}
