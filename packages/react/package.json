{
  "name": "@shrtcss/react",
  "version": "0.1.0",
  "description": "React components package for shrtcss.",
  "homepage": "https://shrtcss.jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/shrtcss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/shrtcss.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "require": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "typesVersions": {
    "*": {
      "*": ["src/index.ts"]
    }
  },
  "files": ["src"],
  "scripts": {
    "clean": "rm -rf ./dist",
    "ladle": "ladle serve",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@shrtcss/core": "workspace:*",
    "@shrtcss/react-hooks": "workspace:*",
    "classix": "^2.1.34"
  },
  "devDependencies": {
    "@ladle/react": "^2.16.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
