{
  "name": "@shrtcss/react",
  "version": "0.1.0",
  "description": "React components package for shrtcss.",
  "homepage": "https://shrtcss.jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/shrtcss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/shrtcss.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.cts",
  "typesVersions": {
    "*": {
      "*": ["dist/index.d.mts"]
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "clean": "rm -rf ./dist",
    "type:check": "tsc --noEmit",
    "dev": "vite",
    "build:docs": "vite build --emptyOutDir",
    "build": "pnpm run type:check && pkgroll --minify -p tsconfig.build.json",
    "watch": "pkgroll --watch"
  },
  "dependencies": {
    "@shrtcss/core": "workspace:*",
    "@shrtcss/react-hooks": "workspace:*",
    "classix": "^2.1.34"
  },
  "devDependencies": {
    "@mdx-js/rollup": "^2.3.0",
    "@storylite/storylite": "^0.12.1",
    "@storylite/vite-plugin": "^0.12.1",
    "@types/node": "^20.6.2",
    "@vitejs/plugin-react": "^4.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^3.0.0",
    "vite": "^4.4.9"
  },
  "peerDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
