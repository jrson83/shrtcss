{
  "name": "@shrtcss/react",
  "version": "0.1.0",
  "description": "React components package for shrtcss.",
  "homepage": "https://shrtcss.jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/shrtcss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/shrtcss.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./src/index.ts",
        "default": "./src/index.ts"
      },
      "import": {
        "types": "./src/index.ts",
        "default": "./src/index.ts"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "typesVersions": {
    "*": {
      "*": ["src/index.ts"]
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "clean": "rm -rf ./dist",
    "type:check": "tsc --noEmit",
    "dev": "vite",
    "build": "pnpm run type:check && pkgroll --minify -p tsconfig.build.json",
    "watch": "pkgroll --watch"
  },
  "dependencies": {
    "@shrtcss/core": "workspace:*",
    "@shrtcss/react-hooks": "workspace:*",
    "classix": "^2.1.34"
  },
  "devDependencies": {
    "@storylite/storylite": "^0.6.0",
    "@storylite/vite-plugin": "^0.6.0",
    "@types/node": "^20.5.6",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.4.9"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.cts",
    "typesVersions": {
      "*": {
        "*": ["dist/index.d.mts"]
      }
    }
  }
}
