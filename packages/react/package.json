{
  "name": "@shrtcss/react",
  "version": "0.1.0",
  "description": "React components package for shrtcss.",
  "homepage": "https://shrtcss.jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/shrtcss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/shrtcss.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": ["dist", "src"],
  "scripts": {
    "clean": "rm -rf ./dist",
    "type:check": "tsc --noEmit",
    "dev": "ladle serve",
    "build": "pnpm run type:check && pkgroll --minify -p tsconfig.build.json",
    "watch": "pkgroll --watch"
  },
  "dependencies": {
    "@shrtcss/core": "workspace:*",
    "@shrtcss/react-hooks": "workspace:*",
    "classix": "^2.1.34"
  },
  "devDependencies": {
    "@ladle/react": "^2.16.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
